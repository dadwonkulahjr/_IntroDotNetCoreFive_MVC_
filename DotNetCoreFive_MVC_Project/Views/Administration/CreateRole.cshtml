@model CreateRoleViewModel
@{ 
    ViewBag.Title = "Create Role";
}
<h1>
    Create New Role
</h1>
<hr />
<form method="post" asp-controller="Administration" asp-action="CreateRole">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
       <label asp-for="RoleName" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" placeholder="Role Name..." />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-10 mt-2">
            <input value="Create Role" class="btn btn-outline-primary" type="submit" style="width:auto;" />
            <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-outline-secondary"
               style="width:auto;">Back to List</a>
        </div>
    </div>

</form>