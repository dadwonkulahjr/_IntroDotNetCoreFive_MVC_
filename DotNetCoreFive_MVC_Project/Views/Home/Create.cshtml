@model CustomerCreateViewModel
@{
   
}

<form method="post" asp-action="Create" asp-controller="Home" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Name" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email..." />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="Agent" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <select asp-for="Agent" asp-items="Html.GetEnumSelectList<Agent>()" class="custom-select">
                <option value="">Select agent</option>
            </select>
            <span asp-validation-for="Agent" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photos" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photos" class="form-control custom-file-input" multiple />
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>

    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back</a>
        </div>
    </div>
</form>


@section Scripts{ 
   <script>
       $(document).ready(function () {
           $('.custom-file-input').on('change', function () {
               var displayLabel = $(this).next('.custom-file-label');
               var files = $(this)[0].files;
               if (files.length > 1) {
                   displayLabel.html(files.length + ' files selected');
               }
               else if (files.length == 1) {
                   displayLabel.html(files[0].name);
               }
           });
       });


   </script>
}






















